<script src="/js/image.js" charset="utf-8" defer></script>

<div class="image_page_wrapper">
  <div class="image_container">
    <div id="author_info">
      <img class="author_image" id={{user.id}} src="{{user.profile_image}}" alt="">
      <p class="authorname" id={{image.username}}>{{image.username}}</p>
    </div>
    <div class="drawn_image_container">
        <img id="drawnimage" src="/images/{{image.id}}.png" alt="">
    </div>
    {{#if own_image}}
    {{else if not_logged_in}}
    {{else}}
    <div class="feed_controls_wrapper">
      <div class="feedcontrols">
        <img id="heartliked" src="https://www.flaticon.com/svg/static/icons/svg/833/833472.svg" alt="">
        <img id="heart" src="https://www.flaticon.com/svg/static/icons/svg/833/833300.svg" alt="">
        <img id="edit" src="https://www.flaticon.com/svg/static/icons/svg/1159/1159633.svg" alt="">
      </div>
    </div>
    {{/if}}
  </div>
</div>
